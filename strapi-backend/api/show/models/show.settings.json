{
  "kind": "collectionType",
  "collectionName": "shows",
  "info": {
    "name": "show"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "poster": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "richtext"
    },
    "releasedate": {
      "type": "date",
      "default": "2021-03-01T11:00:00.000Z"
    },
    "trailer": {
      "type": "string"
    },
    "language": {
      "via": "shows",
      "model": "language"
    },
    "seasons": {
      "via": "show",
      "collection": "season"
    },
    "actors": {
      "via": "shows",
      "collection": "actor"
    }
  }
}
